<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C3E50">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@null"
        android:padding="4dp"
        android:scaleType="fitCenter"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="293dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/america_captian"
        android:gravity="center"
        android:paddingEnd="35dp"
        android:text="INFO"
        android:textColor="#FFFFFF"
        android:textSize="35sp" />
</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start|center"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Avtor: Jožef Gabrijel Avsec"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Datum: 12.12.1212"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verzija: 1.0.0"
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_gravity="start" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Uporaba aplikacije: aplikacija je namenjena boljšemu in lažjemu napredku v fitnesu. Narejen je za začetnike in že iskušene, saj lahko vsi izvemo nekaj novega."
            android:textSize="24sp"
            android:textColor="#FFFFFF"
            android:padding="8dp"
            android:layout_gravity="start" />
    </LinearLayout>
</FrameLayout>